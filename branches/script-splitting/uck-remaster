ISO_IMAGE="$1"
CUSTOMIZE_DIR="$2"
REMASTER_HOME=~/tmp

if [ -e libraries/remaster-live-cd.sh ]; then
	SCRIPTS_DIR=`dirname "$0"`
	LIBRARIES_DIR=$SCRIPTS_DIR/libraries
else
	SCRIPTS_DIR=/usr/bin
	LIBRARIES_DIR=/usr/lib/uck/
fi

$LIBRARIES_DIR/remaster-live-cd.sh

echo "Starting CD remastering on " `date`
echo "Customization dir=$CUSTOMIZE_DIR"

if [ -z "$ISO_IMAGE" ]; then
	usage
	exit 1
fi

if [ -z "$CUSTOMIZE_DIR" ]; then
	usage
	exit 1
fi

CUSTOMIZE_ROOTFS="no"
CUSTOMIZE_INITRD="no"
CUSTOMIZE_ISO="no"

if [ -e "$CUSTOMIZE_DIR/customize" ]; then
	CUSTOMIZE_ROOTFS="yes"
fi

if [ -e "$CUSTOMIZE_DIR/customize_initrd" ]; then
	CUSTOMIZE_INITRD="yes"
fi

if [ -e "$CUSTOMIZE_DIR/customize_iso" ]; then
	CUSTOMIZE_ISO="yes"
fi

if [ ! -e "$ISO_REMASTER_DIR" ] ; then
	$SCRIPTS_DIR/uck-remaster-unpack-iso "$ISO_IMAGE" "$REMASTER_HOME"
fi

if [ "$CUSTOMIZE_ROOTFS" = "yes" ] ; then
	if [ ! -e "$REMASTER_DIR" ] ; then
		$SCRIPTS_DIR/uck-remaster-unpack-rootfs "$REMASTER_HOME"
	fi
fi

if [ "$CUSTOMIZE_INITRD" = "yes" ] ; then
	$SCRIPTS_DIR/uck-remaster-unpack-initrd "$REMASTER_HOME"
	customize_initrd
fi

if [ "$CUSTOMIZE_ROOTFS" = "yes" ] ; then
	$SCRIPTS_DIR/uck-remaster-chroot-rootfs "$REMASTER_HOME/customization-scripts/customize" "$REMASTER_HOME"
	RESULT=$?
	if [ "$RESULT" -ne 0 ]; then
		failure "Running customization script failed, error=$RESULT"
	fi
fi

if [ "$CUSTOMIZE_ISO" = "yes" ] ; then
	customize_iso
fi

if [ "$MANUAL_CUSTOMIZATION_PAUSE" = "yes" ] ; then
	echo "Pausing for manual customization, press Enter when finished..."
	read DUMMY
fi

if [ "$CUSTOMIZE_INITRD" = "yes" ] ; then
	$SCRIPTS_DIR/uck-remaster-pack-initrd "$REMASTER_HOME"
fi

if [ "$CUSTOMIZE_ROOTFS" = "yes" ] ; then
	$SCRIPTS_DIR/uck-remaster-pack-rootfs "$REMASTER_HOME"
fi

$SCRIPTS_DIR/uck-remaster-pack-iso "$REMASTER_HOME"
$SCRIPTS_DIR/uck-remaster-clean "$REMASTER_HOME"

echo "Generation completed SUCCESSFULLY, find your ISO in $NEW_FILES_DIR"

exit 0